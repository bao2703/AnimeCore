@inject IMovieRepository MovieRepository
@inject IBannerAdsRepository BannerAdsRepository
@{
    ViewData["Title"] = "Home Page";
}

@section Slide {
    @await Html.PartialAsync("_SlidePartial")
}

<vc:movie-slide model="@MovieRepository.FindPopularMovie(16)" title="Popular" rows="1"></vc:movie-slide>

<vc:movie-slide model="@MovieRepository.FindNewestMovie(16)" title="Newest" rows="1"></vc:movie-slide>


@section TopAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Top", LocationType.Home).PickRandom())
}

@section RightAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Right", LocationType.Home).PickRandom())
}

@section BottomAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Bottom", LocationType.Home).PickRandom())
}