@inject IMovieRepository MovieRepository
@inject IBannerAdsRepository BannerAdsRepository
@{
    ViewData["Title"] = "Home Page";
}

@section Slide {
    @await Html.PartialAsync("_SlidePartial")
}

<vc:movie-slide model="@MovieRepository.FindPopularMovie(32)" title="Popular" rows="2"></vc:movie-slide>

<vc:movie-slide model="@MovieRepository.FindMostLikedMovie(16)" title="Most Liked" rows="1"></vc:movie-slide>

<vc:movie-slide model="@MovieRepository.FindNewestMovie(16)" title="Newest" rows="1"></vc:movie-slide>

@section TopAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Top", BannerType.Home).PickRandom())
}

@section RightAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Right 1", BannerType.Home).PickRandom())
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Right 2", BannerType.Home).PickRandom())
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Right 3", BannerType.Home).PickRandom())
}

@section BottomAds {
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Bottom", BannerType.Home).PickRandom())
}

@section Balloon {
    @await Html.PartialAsync("_RightBalloonPartial", BannerAdsRepository.GetActiveBanners("Right Balloon", BannerType.Home).PickRandom())
}