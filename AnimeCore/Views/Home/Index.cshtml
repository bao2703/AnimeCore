@inject IMovieRepository MovieRepository
@{
    ViewData["Title"] = "Home Page";
}

@section slide {
    @await Html.PartialAsync("_SlidePartial")
}

@await Component.InvokeAsync("MovieSlide", new {model = MovieRepository.FindPopularMovie(16), title = "Popular"})

@await Component.InvokeAsync("MovieSlide", new {model = MovieRepository.FindNewestMovie(16), title = "Newest"})