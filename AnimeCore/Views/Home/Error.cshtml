@model Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData[Constant.Title] - AnimeCore</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap-social/bootstrap-social.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/assets/client/css/site.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>

<!-- navbar -->
@await Html.PartialAsync("_NavbarPartial")

<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-center" style="color: white">
                    <h1>
                        Oops!
                    </h1>
                    <h2>
                        @Model.Title
                    </h2>
                    <h3>
                        @Model.Description
                    </h3>
                    <div class="top-buffer" style="margin-bottom: 20px">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">
                            <i class="fa fa-home"></i>
                            Take Me Home
                        </a>
                        <a class="btn btn-default btn-lg" onclick="window.history.back()">
                            <i class="fa fa-backward"></i>
                            Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>