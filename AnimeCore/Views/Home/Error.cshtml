@model Models.ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-center" style="color: white">
            <h1>
                Oops!
            </h1>
            <h2>
                @Model.Title
            </h2>
            <h3>
                @Model.Description
            </h3>
            <div class="top-buffer" style="margin-bottom: 20px">
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary btn-lg">
                    <i class="fa fa-home"></i>
                    Take Me Home
                </a>
                <a class="btn btn-default btn-lg" onclick="window.history.back()">
                    <i class="fa fa-backward"></i>
                    Go Back
                </a>
            </div>
        </div>
    </div>
</div>