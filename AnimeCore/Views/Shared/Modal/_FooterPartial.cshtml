@model Models.ModalViewModels.ModalFooter

<div class="modal-footer">
    <button data-dismiss="modal" id="@Model.CancelButtonId" class="btn @Model.CancelButtonClass" type="button">@Model.CancelButtonText</button>
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn @Model.SubmitButtonClass" id="@Model.SubmitButtonId" type="submit">
            @Model.SubmitButtonText
        </button>
    }
</div>