@using Microsoft.ApplicationInsights.AspNetCore
@using Microsoft.Extensions.Options
@inject IBannerAdsRepository BannerAdsRepository
@inject IOptions<Authentication> Authentication
@inject JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData[Constant.Title] - AnimeCore</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap-social/bootstrap-social.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/assets/css/styles.css" rel="stylesheet" asp-append-version="true"/>
    <link href="~/assets/client/css/site.css" rel="stylesheet" asp-append-version="true"/>

    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>

@*<div id="fb-root"></div>*@
<script>
    window.fbAsyncInit = function() {
        FB.init({
            appId: "@Authentication.Value.Facebook.AppId",
            xfbml: true,
            version: "v2.8",
            status: true
        });
        FB.AppEvents.logPageView();
    };
</script>

<!-- navbar -->
@await Html.PartialAsync("_NavbarPartial")
<!-- /navbar -->
<!-- top-ads -->
<div class="container" id="top-ads">
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Top", LocationType.HomeChild).PickRandom())
    @RenderSection("TopAds", false)
</div>
<!-- /.top-ads -->
<!-- slide -->
@RenderSection("Slide", false)
<!-- /.slide -->
<!-- body-content -->
<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-sm-9">
                @RenderBody()
            </div>
            <div class="col-sm-3">
                <!-- right-ads -->
                <div id="right-ads">
                    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Right", LocationType.HomeChild).PickRandom())
                    @RenderSection("RightAds", false)
                </div>
                <!-- /.right-ads -->
            </div>
        </div>
    </div>
</div>
<!-- /.body-content -->
<!-- bottom-ads -->
<div class="container" id="bottom-ads">
    @await Html.PartialAsync("_BannerPartial", BannerAdsRepository.GetActiveBanners("Bottom", LocationType.HomeChild).PickRandom())
    @RenderSection("BottomAds", false)
</div>
<!-- /.bottom-ads -->

<footer></footer>

<script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
<script src="~/assets/js/facebook-sdk.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap-select/dist/js/bootstrap-select.js" asp-append-version="true"></script>
<script src="~/assets/client/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", false)

@await Html.PartialAsync("_RightBalloonPartial", BannerAdsRepository.GetActiveBanners("Right Balloon", LocationType.HomeChild).PickRandom())

</body>
</html>