@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Hello @User.Identity.Name
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li class="@(User.HasClaim("User", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="User" title="User">
                        <i class="fa fa-user"></i>
                        User
                    </a>
                </li>
                <li class="@(User.HasClaim("Role", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Role" title="Role">
                        <i class="fa fa fa-id-card"></i>
                        Role
                    </a>
                </li>
                <li class="divider">
                </li>
                <li class="@(User.HasClaim("Movie", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Movie" title="Movie">
                        <i class="fa fa-film"></i>
                        Movie
                    </a>
                </li>
                <li class="@(User.HasClaim("Genre", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Genre" title="Genre">
                        <i class="fa fa-list"></i>
                        Genre
                    </a>
                </li>
                <li class="@(User.HasClaim("Setting", "Slide") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Slide" asp-controller="Setting" title="Slide">
                        <i class="fa fa-sliders"></i>
                        Slide
                    </a>
                </li>
                <li class="divider">
                </li>
                <li class="@(User.HasClaim("Customer", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Customer" title="Customer">
                        <i class="fa fa-group"></i>
                        Customer
                    </a>
                </li>
                <li class="@(User.HasClaim("VideoAds", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="VideoAds" title="Video Ads">
                        <i class="fa fa-file-video-o"></i>
                        Video Ads
                    </a>
                </li>
                <li class="@(User.HasClaim("BannerAds", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="BannerAds" title="Banner Ads">
                        <i class="fa fa-image"></i>
                        Banner Ads
                    </a>
                </li>
                <li class="@(User.HasClaim("AdsLocation", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="AdsLocation" title="Location">
                        <i class="fa fa-list-alt"></i>
                        Location
                    </a>
                </li>
                <li class="divider">
                </li>
                <li class="@(User.HasClaim("Setting", "Index") ? "" : "disabled")">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Setting" title="Setting">
                        <i class="fa fa-cog"></i>
                        Setting
                    </a>
                </li>
            </ul>
        </li>
        <li>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="navbar-right">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">
                    Logout
                </button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}