@model Models.AccountViewModels.ExternalLoginConfirmationViewModel
@{
    ViewData[Constant.Title] = "Register";
}

<div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-8 col-md-offset-5 col-md-6">
        <!-- panel -->
        <div class="panel panel-info">
            <!-- panel-heading -->
            <div class="panel-heading">
                <div class="panel-title">@ViewBag.Title</div>
            </div>
            <h3 align="center">Associate your @ViewData["LoginProvider"] account.</h3>
            <!-- /panel-heading -->
            <!-- panel-body -->
            <div style="padding-top: 10px" class="panel-body">
                <form asp-action="ExternalLoginConfirmation" asp-controller="Account" asp-route-returnurl="@ViewData[Constant.ReturnUrl]" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger col-sm-12 text-center"></div>
                    <div style="margin-bottom: 8px" class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user"></i>
                        </span>
                        <input asp-for="UserName" class="form-control" asp-placeholder-for="UserName" autofocus/>
                    </div>
                    <div style="margin-bottom: 10px">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div style="margin-bottom: 8px" class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input asp-for="Email" class="form-control" asp-placeholder-for="Email"/>
                    </div>
                    <div style="margin-bottom: 10px">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div style="margin-top: 20px" class="form-group">
                        <!-- button -->
                        <div class="col-sm-12">
                            <input type="submit" class="btn btn-success btn-block" value="@ViewBag.Title"/>
                        </div>
                        <!-- /.button -->
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div style="border-top: 1px solid #888; font-size: 85%; padding-top: 15px; text-align: center">
                                You've successfully authenticated with <strong>@ViewData[Constant.LoginProvider]</strong>.
                                Please enter a user name and email for this site and click the Register button to finish
                                logging in.
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <!-- /panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}