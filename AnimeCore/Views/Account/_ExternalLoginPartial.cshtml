@inject IAccountService AccountService

<div class="external-login">
    @{ var loginProviders = AccountService.GetExternalAuthenticationSchemes(); }
    <form asp-action="ExternalLogin" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        @foreach (var provider in loginProviders)
        {
            <button type="submit" class="btn btn-block btn-social btn-facebook" name="provider" value="@provider.AuthenticationScheme" title="Login using your @provider.DisplayName account" style="text-align: center;">
                <span class="fa fa-facebook">
                </span>
                Login with @provider.AuthenticationScheme
            </button>
        }
    </form>
</div>