@using Models.ModalViewModels
@model IEnumerable<Movie>
@{
    ViewData[Constant.Title] = "Anime List";
}

@await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "movie-action-modal", ModalSize = ModalSize.Medium})

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12" style="overflow-x: auto;">
            <div class="btn-group">
                <a asp-action="Add" class="btn btn-primary" data-toggle="modal" data-target="#movie-action-modal">
                    <i class="fa fa-plus"></i> Add Genre
                </a>
            </div>
            <div class="top-buffer"></div>
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                <tr>
                    <th>
                        <display name-for="@Model.First().Id"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Name"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Image"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().GenreMovies"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Fansub"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Status"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Quality"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Rating"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Vote"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().View"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Release"></display>
                    </th>
                    <th>
                        <display name-for="@Model.First().Description"></display>
                    </th>
                    <th style="width: 20px;">#</th>
                    <th style="width: 20px;">#</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td class="text-center">
                            <a asp-action="Index" asp-controller="Episode" asp-route-movieId="@item.Id">
                                @item.Name
                            </a>
                        </td>
                        <td>
                            <img src="@item.Image" alt="@item.Name" class="img-responsive" asp-append-version="true"/>
                        </td>
                        <td>
                            @string.Join(", ", item.GenreMovies.Select(x => x.Genre.Name))
                        </td>
                        <td>@item.Fansub</td>
                        <td>@item.Status</td>
                        <td>@item.Quality</td>
                        <td>@item.Rating</td>
                        <td>@item.Vote</td>
                        <td>@item.View</td>
                        <td>@item.Release.ToString("MM/dd/yyyy")</td>
                        <td style="font-size: 11px">@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" data-toggle="modal" data-target="#movie-action-modal">
                                <i class="fa fa-pencil"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="modal" data-target="#movie-action-modal">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/assets/admin/js/modal-remote-setup.js"></script>
}