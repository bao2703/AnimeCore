@using Models.ModalViewModels
@model IEnumerable<BannerAdsLocation>
@{
    ViewData[Constant.Title] = "Banner Location List";
}

@await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "advertisement-action-modal", ModalSize = ModalSize.Medium})

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <display name-for="@Model.First().Id"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Name"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Desciption"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Price"></display>
                        </th>
                        <th>
                            # Banner
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm" data-toggle="modal" data-target="#advertisement-action-modal">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#advertisement-action-modal">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Desciption</td>
                            <td>@item.Price</td>
                            <td>@item.BannerAdses.Count</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/assets/admin/js/modal-remote-setup.js" asp-append-version="true"></script>
}