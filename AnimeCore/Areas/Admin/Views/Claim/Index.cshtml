@model IEnumerable<Models.ClaimViewModels.ClaimViewModel>
@{
    dynamic role = ViewData["Role"];
    ViewData[Constant.Title] = role.Name + " Claims";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                    <tr>
                        <th>
                            <display name-for="@Model.First().Controller"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Action"></display>
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Controller</td>
                            <td>@item.Action</td>
                            <td>
                                @if (item.IsLocked)
                                {
                                    <button class="btn btn-claim-unlock btn-primary">
                                        <i class="fa fa-unlock"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-claim-lock btn-danger">
                                        <i class="fa fa-lock"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).on("click",
            ".btn-claim-lock",
            function() {
                var btnUnclock =
                    '<button class="btn btn-claim-unlock btn-primary"><i class="fa fa-unlock"></i></button>';
                updateClaim("Add", $(this), btnUnclock);
            });

        $(document).on("click",
            ".btn-claim-unlock",
            function() {
                var btnClock =
                    '<button class="btn btn-claim-lock btn-danger"><i class="fa fa-lock"></i></button>';
                updateClaim("Remove", $(this), btnClock);
            });

        function updateClaim(operation, btnClick, btnChangeHtml) {
            var td = btnClick.closest("tr").find("td");
            var controllerName = td.first().text();
            var action = td.first().next().text();
            $.ajax({
                method: "POST",
                url: "@Url.Action("Index", "Claim")",
                data: {
                    roleId: "@role.Id",
                    controllerName: controllerName,
                    actionName: action,
                    operation: operation
                },
                success: function(response) {
                    if (response.status === "Ok") {
                        btnClick.parent()
                            .html(btnChangeHtml);
                    } else {
                        alert("error");
                    }
                }
            });
        }
    </script>
}