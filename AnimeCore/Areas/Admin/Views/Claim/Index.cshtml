@model IEnumerable<Models.ClaimViewModels.ClaimViewModel>
@{
    dynamic role = ViewData["Role"];
    ViewData[Constant.Title] = role.Name + " Claims";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12">
            <div class="btn-group">
                <a asp-action="Add" asp-route-roleId="@role.Id" class="btn btn-primary @(User.HasClaim("Claim", "Add") ? "" : "disabled")">
                    <i class="fa fa-plus"></i> Add Claims
                </a>
            </div>
            <div class="top-buffer"></div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                    <tr>
                        <th>
                            <display name-for="@Model.First().Controller"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Action"></display>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Controller</td>
                            <td>@item.Action</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>