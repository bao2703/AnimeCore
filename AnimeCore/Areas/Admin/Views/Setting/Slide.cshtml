@using Microsoft.Extensions.Options
@using Repositories
@inject IOptionsSnapshot<AppSettings> AppSettings
@inject IMovieRepository MovieRepository
@{
    ViewData[Constant.Title] = "Slide Settings";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="form-group" style="background-color: #1e1e1e">
            @await Html.PartialAsync("_SlidePartial")
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Genres</th>
                    <th>Status</th>
                    <th>Ep</th>
                    <th>Release</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in MovieRepository.FindSlide(AppSettings.Value.Slide.Split(',')))
                {
                    <tr>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm @(User.HasClaim("Setting", "Delete") ? "" : "disabled")">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Index" asp-controller="Episode" asp-route-movieId="@item.Id">
                                @item.Name
                                <img src="@item.Image" alt="@item.Name" class="img-responsive" asp-append-version="true" style="max-height: 200px"/>
                            </a>
                        </td>
                        <td>
                            @string.Join(", ", item.GenreMovies.Select(x => x.Genre.Name))
                        </td>
                        <td>
                            <label class="label label-@Helper.GetStatusClass(item.Status)">
                                @item.Status
                            </label>
                        </td>
                        <td>@item.Episodes.Count</td>
                        <td>@item.Release.Format()</td>
                        <td style="font-size: 11px">@item.Description</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>