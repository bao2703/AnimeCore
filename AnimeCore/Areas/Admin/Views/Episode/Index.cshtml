@using Models.ModalViewModels
@model IEnumerable<Models.EpisodeViewModels.EpisodeViewModel>
@{
    var movie = (Movie) ViewData["Movie"];
    ViewData[Constant.Title] = movie.Name + " Episode List";
}

@await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "ep-action-modal", ModalSize = ModalSize.Medium})

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12">
            <div class="btn-group">
                <a asp-action="Add" asp-route-movieId="@movie.Id" class="btn btn-primary" data-toggle="modal" data-target="#ep-action-modal">
                    <i class="fa fa-plus"></i> Add Episode
                </a>
            </div>
            <div class="top-buffer"></div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                    <tr>
                        <th>
                            <display name-for="@Model.First().Name"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Url"></display>
                        </th>
                        <th style="width: 20px;">#</th>
                        <th style="width: 20px;">#</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Url</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" data-toggle="modal" data-target="#ep-action-modal">
                                    <i class="fa fa-pencil"></i> Edit
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="modal" data-target="#ep-action-modal">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/assets/admin/js/modal-remote-setup.js"></script>
}