@using Models.ModalViewModels
@model IEnumerable<Models.RoleViewModels.RoleViewModel>
@{
    ViewData[Constant.Title] = "Role List";
}

@await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "role-action-modal", ModalSize = ModalSize.Medium})

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12" style="overflow-x: auto;">
            <div class="btn-group">
                <a asp-action="AddEdit" class="btn btn-primary" data-toggle="modal" data-target="#role-action-modal">
                    <i class="fa fa-plus"></i> Add User
                </a>
            </div>
            <div class="top-buffer"></div>
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>NumberOfUsers</th>
                    <th>Description</th>
                    <th style="width: 20px;">#</th>
                    <th style="width: 20px;">#</th>
                </tr>
                </thead>
                <tbody>
                @{
                    var i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.NumberOfUsers</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" data-toggle="modal" data-target="#user-action-modal">
                                <i class="fa fa-pencil"></i> Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="modal" data-target="#user-action-modal">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $('#role-action-modal').addClass('action-modal');
</script>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/assets/admin/js/modal.js"></script>
}