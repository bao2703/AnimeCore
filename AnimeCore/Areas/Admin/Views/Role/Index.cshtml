@using Models.ModalViewModels
@model IEnumerable<Models.RoleViewModels.RoleViewModel>
@{
    ViewData[Constant.Title] = "Role List";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12" style="overflow-x: auto;">
            <div class="btn-group">
                <a data-toggle="modal" asp-action="AddEdit" data-target="#add-edit-role-modal" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Add Role
                </a>
            </div>
            @await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "add-edit-role-modal", ModalSize = ModalSize.Small})
            <div class="top-buffer"></div>
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>NumberOfUsers</th>
                    <th>Description</th>
                    <th style="width: 20px;">#</th>
                    <th style="width: 20px;">#</th>
                </tr>
                </thead>
                <tbody>
                @{
                    var i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.NumberOfUsers</td>
                        <td>@item.Description</td>
                        <td>
                            @using (Html.BeginForm("Edit", "User", new {userId = item.Id}, FormMethod.Get))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-info" title="Edit">
                                    <i class="fa fa-edit fa-fw"></i>
                                </button>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "User", new {userId = item.Id}, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-danger" title="Delete">
                                    <i class="fa fa-trash-o fa-fw"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>