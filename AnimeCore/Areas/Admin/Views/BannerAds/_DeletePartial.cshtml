@using Models.ModalViewModels
@model BannerAds

<form asp-action="Delete" asp-controller="Role" method="post" class="modal-form">
    @await Html.PartialAsync("Modal/_HeaderPartial", new ModalHeader {Heading = "Delete Banner"})
    <div class="modal-body form-horizontal">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 text-center"></div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Title" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Description" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Url" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Url" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Height" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Height" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Width" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Width" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="Source" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <img src="@Model.Source" alt="@Model.Name" class="img-responsive img-rounded"/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="LocationType" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="LocationType" value="@Model.LocationType.EnumValue()" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Location</label>
                    <div class="col-sm-9">
                        <input asp-for="BannerAdsLocation.Name" class="form-control" readonly=""/>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="StartDate" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <div class="input-group" id="start">
                            <input asp-for="StartDate" value="@Model.StartDate.Format()" class="form-control" readonly=""/>
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-11">
                <div class="form-group">
                    <label asp-for="EndDate" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <div class="input-group" id="end">
                            <input asp-for="EndDate" value="@Model.EndDate.Format()" class="form-control" readonly=""/>
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("Modal/_FooterPartial", new ModalFooter {SubmitButtonText = "Delete", SubmitButtonClass = "btn-danger"})
</form>

<script src="~/assets/admin/js/modal-form.js" asp-append-version="true"></script>