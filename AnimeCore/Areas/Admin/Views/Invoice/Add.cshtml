@model Invoice
@{
    ViewData[Constant.Title] = "Add Invoice";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <form asp-action="Add" method="post" class="modal-form">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 text-center"></div>
                <div class="row">
                    <div class="col-sm-offset-1 col-sm-5">
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <div class="input-group" id="start">
                                <input asp-for="StartDate" value="@Model.StartDate.Format()" class="form-control"/>
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <div class="input-group" id="end">
                                <input asp-for="EndDate" value="@Model.EndDate.Format()" class="form-control"/>
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(".selectpicker").selectpicker();
        $('#start').datetimepicker({
            locale: 'en',
            format: 'MM/DD/YYYY'
        });
        $('#end').datetimepicker({
            useCurrent: false,
            locale: 'en',
            format: 'MM/DD/YYYY'
        });
        $("#start").on("dp.change",
            function(e) {
                $('#end').data("DateTimePicker").minDate(e.date);
            });
        $("#end").on("dp.change",
            function(e) {
                $('#start').data("DateTimePicker").maxDate(e.date);
            });
    </script>
}