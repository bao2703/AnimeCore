@using Models.ModalViewModels
@model IEnumerable<Models.UserViewModels.UserListViewModel>
@{
    ViewData[Constant.Title] = "User List";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h4>
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12" style="overflow-x: auto;">
            <div class="btn-group">
                <a data-toggle="modal" asp-action="Add" data-target="#add-user-modal" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Add User
                </a>
            </div>
            @await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "add-user-modal", ModalSize = ModalSize.Medium})
            <div class="top-buffer"></div>
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                <tr>
                    <th>No</th>
                    <th>User name</th>
                    <th>Email</th>
                    <th>Email Confirmed</th>
                    <th style="width: 20px;">#</th>
                    <th style="width: 20px;">#</th>
                </tr>
                </thead>
                <tbody>
                @{
                    var i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>@item.EmailConfirmed</td>
                        <td>
                            @using (Html.BeginForm("Edit", "User", new {userId = item.Id}, FormMethod.Get))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-info" title="Edit">
                                    <i class="fa fa-edit fa-fw"></i>
                                </button>
                            }
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "User", new {userId = item.Id}, FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-danger" title="Delete">
                                    <i class="fa fa-trash-o fa-fw"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#dataTables").DataTable({
            responsive: true
        });
    });
</script>