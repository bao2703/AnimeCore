@inject IAdsLocationRepository AdsLocationRepository
@using Models.ModalViewModels
@using Repositories
@model Advertisement

@{
    var modalHeading = "Add Advertisement";
    var submitButtonText = "Add";
    var submitButtonClass = "btn-primary";
    if (ViewData["Action"].ToString() == "Edit")
    {
        modalHeading = "Edit Advertisement";
        submitButtonText = "Edit";
        submitButtonClass = "btn-info";
    }
}

<form asp-action="@ViewData["Action"]" asp-route-customerId="@ViewData["CustomerId"]" method="post" class="modal-form">
    @await Html.PartialAsync("Modal/_HeaderPartial", new ModalHeader {Heading = modalHeading})
    <div class="modal-body form-horizontal">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 text-center"></div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="Title" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="Description" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="Url" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Url" class="form-control"/>
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="Source" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <div class="input-group">
                            <label class="input-group-btn">
                                <span class="btn btn-primary">
                                    Browse... <input type="file" style="display: none;">
                                </span>
                            </label>
                            <input type="text" class="form-control" readonly="">
                        </div>
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="AdsLocation.AdsType" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <select asp-items="Html.GetEnumSelectList<AdsType>()" class="selectpicker show-tick form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Location</label>
                    <div class="col-sm-9">
                        <select asp-for="AdsLocationId" class="selectpicker show-tick form-control" id="ads-location"></select>
                        <span asp-validation-for="AdsLocationId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="StartDate" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <div class="input-group" id="start">
                            <input asp-for="StartDate" value="@Model.StartDate.Format()" class="form-control"/>
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-sm-offset-1 col-sm-10">
                <div class="form-group">
                    <label asp-for="EndDate" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <div class="input-group" id="end">
                            <input asp-for="EndDate" value="@Model.EndDate.Format()" class="form-control"/>
                            <span class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </span>
                        </div>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("Modal/_FooterPartial", new ModalFooter {SubmitButtonText = submitButtonText, SubmitButtonClass = submitButtonClass})
</form>

<script>
    $(".selectpicker").selectpicker();

    $('.selectpicker').on('change',
        function() {
            var selected = $(this).find("option:selected").text();
            var option = "";
            if (selected === "@AdsType.Banner") {
                @foreach (var item in AdsLocationRepository.FindBy(x => x.AdsType == AdsType.Banner))
                {
                    <text>option += '<option value="@item.Id">@item.Name</option>';</text>
                }
            } else {
                @foreach (var item in AdsLocationRepository.FindBy(x => x.AdsType == AdsType.Video))
                {
                    <text>option += '<option value="@item.Id">@item.Name</option>';</text>
                }
            }
            $("#ads-location").html(option);
            $("#ads-location").selectpicker('refresh');
        });

    $(".selectpicker").trigger("change");

    $('#start').datetimepicker({
        locale: 'en',
        format: 'MM/DD/YYYY'
    });
    $('#end').datetimepicker({
        useCurrent: false,
        locale: 'en',
        format: 'MM/DD/YYYY'
    });
    $("#start").on("dp.change",
        function(e) {
            $('#end').data("DateTimePicker").minDate(e.date);
        });
    $("#start").trigger("dp.change");
    $("#end").on("dp.change",
        function(e) {
            $('#start').data("DateTimePicker").maxDate(e.date);
        });
</script>
<script src="~/assets/admin/js/modal-form.js"></script>