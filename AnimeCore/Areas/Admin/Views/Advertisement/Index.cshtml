@using Models.ModalViewModels
@model IEnumerable<Advertisement>
@{
    ViewData[Constant.Title] = "Advertisement List";
}
<style>
    .even { background-color: #f9f9f9; }
</style>

@await Html.PartialAsync("Modal/_ModalPartial", new Modal {Id = "advertisement-action-modal", ModalSize = ModalSize.Medium})

<div class="panel panel-info">
    <div class="panel-heading">
        <h4 class="panel-title">
            @ViewData[Constant.Title]
        </h4>
    </div>
    <div class="panel-body">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                    <tr>
                        <th>
                            <div class="btn-group">
                                <a asp-action="Add" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#advertisement-action-modal">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </th>
                        <th>
                            <display name-for="@Model.First().Name"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Title"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Description"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Url"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().Source"></display>
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            <display name-for="@Model.First().AdsLocation.AdsType"></display>
                        </th>
                        <th>
                            Location
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            <display name-for="@Model.First().Click"></display>
                        </th>
                        <th>
                            <display name-for="@Model.First().View"></display>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm" data-toggle="modal" data-target="#advertisement-action-modal">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#advertisement-action-modal">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Url</td>
                            <td>@item.Source</td>
                            <td>@item.StartDate.Format()-@item.EndDate.Format()</td>
                            <td>@item.AdsLocation.AdsType</td>
                            <td>@item.AdsLocation.Name</td>
                            @{
                                var status = "Actice";
                                var statusColor = "green";
                                if (item.EndDate < DateTime.Today)
                                {
                                    status = "Expired";
                                    statusColor = "red";
                                }
                                else if (item.StartDate > DateTime.Today)
                                {
                                    status = "Not start";
                                    statusColor = "blue";
                                }
                            }
                            <td>
                                <span style="color: @statusColor">@status</span>
                            </td>
                            <td>@item.Click</td>
                            <td>@item.View</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/assets/admin/js/modal-remote-setup.js"></script>
}